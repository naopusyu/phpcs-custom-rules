{
    "name": "naopusyu/phpcs-custom-rules",
    "description": "Custom rules for PHP_CodeSniffer",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "naopusyu"
        }
    ],
    "require": {
        "squizlabs/php_codesniffer": "^3.11"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.2"
    },
    "autoload": {
        "psr-4": {
            "Naopusyu\\PHPCSCustomRules\\": "src/PHPCSCustomRules/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Naopusyu\\PHPCSCustomRules\\Tests\\": "tests/PHPCSCustomRules/"
        }
    },
    "scripts": {
        "test": "./vendor/bin/phpunit --bootstrap ./tests/bootstrap.php ./tests"
    }
}
